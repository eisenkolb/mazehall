#!/usr/bin/env node

require("coffee-script/register");

var option, program, cli = require("../lib/cli");

program = require("commander");
program.description("Installs a MAZEHALL module")
       .option("-r, --repo", "repository path")
       .parse(process.argv);

option = {
    repo: program.repo,
    name: program.args.length ? program.args[0] : null
};

if (option.name === null || option.repo === null) {
    console.log("Package name or repository is required");
    return program.help();
}

cli.install(option.name, option);